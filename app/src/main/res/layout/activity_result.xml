<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

android:weightSum="4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dev.sigma77.kidslearning.ResultActivity"
    android:orientation="vertical"
    >

    <include
        layout="@layout/app_bar"
        android:id="@+id/app_bar"

        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/imageView10"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/result"
        android:layout_weight="3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Резултат за играта"
        android:id="@+id/textResults"

        android:layout_gravity="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Познати: "
            android:id="@+id/textCorrect"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/currentCorrectResult"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Точки: "
            android:id="@+id/textView5"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/points"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/testResultLayout"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Общ резултат"
            android:id="@+id/textTestResult"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/testPoints"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="точки"
            android:id="@+id/textPoints2"
            android:layout_gravity="bottom"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLayout"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Да"
            android:textSize="20dp"
            android:id="@+id/button1"
            android:layout_gravity="bottom"
            android:textColor="@color/accentColor"
            android:background="@drawable/shapes2"/>
    </LinearLayout>





</LinearLayout>
